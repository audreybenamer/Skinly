<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainScreen">

    <ImageView
        android:id="@+id/skinlylogo_mainscreen"
        android:layout_width="153dp"
        android:layout_height="57dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/skinlylogo"
        android:src="@drawable/skinlylogo"/>

    <ImageView
        android:id="@+id/profilepic_mainscreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_launcher_background" />

    <Button
        android:id="@+id/editprofile_mainscreen"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="99dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:text="edit profile"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#000000"
        app:backgroundTint="#00FFFFFF"
        app:backgroundTintMode="multiply"
        app:layout_constraintEnd_toEndOf="@+id/profilepic_mainscreen"
        app:layout_constraintStart_toStartOf="@+id/profilepic_mainscreen"
        app:layout_constraintTop_toBottomOf="@+id/profilepic_mainscreen" />

    <TextView
        android:id="@+id/sublogo_mainscreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="daily skin"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/skinlylogo_mainscreen"
        app:layout_constraintStart_toStartOf="@+id/skinlylogo_mainscreen"
        app:layout_constraintTop_toBottomOf="@+id/skinlylogo_mainscreen" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_mainscreen"
        android:layout_width="410dp"
        android:layout_height="363dp"
        android:layout_marginTop="224dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/products_mainscreen"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="products"
        android:textAllCaps="false"
        android:textColor="#0A30FF"
        app:backgroundTint="#00FFFFFF"
        app:elevation="0dp"
        app:iconTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/adddaily_mainscreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        app:backgroundTint="#00FFFFFF"
        app:backgroundTintMode="multiply"
        app:elevation="0dp"
        app:fabSize="auto"
        app:layout_constraintBottom_toTopOf="@+id/products_mainscreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="#00FFFFFF"
        app:srcCompat="@android:drawable/ic_menu_add" />

    <TextView
        android:id="@+id/welcomemessage_mainscreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/skinlylogo_mainscreen"
        app:layout_constraintTop_toBottomOf="@+id/skinlylogo_mainscreen" />
</androidx.constraintlayout.widget.ConstraintLayout>